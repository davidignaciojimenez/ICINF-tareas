num1=int(input("Ingrese un número: "))
if num1<10:
    print("El número tiene 1 dígito.")
else:
    if num1<100:
        print("El número tiene 2 dígitos.")
    else:
        if num1<1000:
            print("El número tiene 3 dígitos.")
        else:
            print("El número tiene 4 o más dígitos.")